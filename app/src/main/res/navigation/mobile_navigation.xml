<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.karabourse.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_my_profile"
        android:name="com.example.karabourse.ui.dashboard.DashboardFragment"
        android:label="my_profile"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_categury"
        android:name="com.example.karabourse.ui.notifications.NotificationsFragment"
        android:label="category"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.example.karabourse.ui.notifications.NotificationsFragment"
        android:label="orders"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.karabourse.ui.notifications.NotificationsFragment"
        android:label="search"
        tools:layout="@layout/fragment_notifications" />
</navigation>